{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Chrome Extension",
            "runtimeArgs": [
                "--user-data-dir=${workspaceFolder}/chrome-debug",
                "--load-extension=${workspaceFolder}/streamlineTools",
                "--disable-extensions-except=${workspaceFolder}/streamlineTools"
            ],
            "userDataDir": "${workspaceFolder}/chrome-debug",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch", 
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--runInBand", "--no-cache"],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Puppeteer Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--runInBand", "--testPathPattern=.*\\.puppeteer\\.test\\.js"],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "HEADLESS": "false"
            }
        }
    ]
}