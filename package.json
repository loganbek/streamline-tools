{
  "name": "streamline-tools",
  "version": "1.0.0",
  "description": "Streamline your CPQ workflows, development, administration and maintenance.",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:quick": "jest --testPathPattern='(extension|login)\\.test\\.js$'",
    "test:all": "jest --runInBand --testTimeout=120000",
    "test:config": "jest --testPathPattern='config.*\\.test\\.js$' --runInBand",
    "test:commerce": "jest --testPathPattern='commerce.*\\.test\\.js$' --runInBand", 
    "test:interfaces": "jest --testPathPattern='interfaces.*\\.test\\.js$' --runInBand",
    "test:stylesheets": "jest --testPathPattern='(headerFooter|stylesheet).*\\.test\\.js$' --runInBand",
    "test:documents": "jest --testPathPattern='document.*\\.test\\.js$' --runInBand",
    "test:utils": "jest --testPathPattern='utils.*\\.test\\.js$' --runInBand"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "babel-jest": "^28.1.3",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^9.0.2",
    "minimist": "1.2.6",
    "puppeteer": "^24.4.0",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "standard-summary": "^1.0.0",
    "@types/jest": "^29.5.12",
    "@types/jest-environment-puppeteer": "^5.0.8",
    "expect-puppeteer": "^9.0.5",
    "jest-environment-puppeteer": "^9.0.2",
    "jest-html-reporter": "^3.10.2",
    "jsdom": "^24.0.0",
    "jsdom-global": "^3.0.2",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "standard": {
    "globals": [
      "chrome"
    ]
  },
  "dependencies": {
    "puppeteer": "^22.15.0",
    "wallaby": "^1.0.0"
  }
}
