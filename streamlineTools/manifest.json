{
  "name": "Streamline Tools",
  "version": "0.0.1",
  "description": "Streamline Tools for Oracle CPQ Cloud!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    }
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bigmachines.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/stream_line16.png",
      "32": "images/stream_line32.png",
      "48": "images/stream_line48.png",
      "128": "images/stream_line128.png"
    }
  },
  "icons": {
    "16": "images/stream_line16.png",
    "32": "images/stream_line32.png",
    "48": "images/stream_line48.png",
    "128": "images/stream_line128.png"
  },
  "manifest_version": 2
}