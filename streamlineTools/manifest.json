{
  "name": "Streamline Tools",
  "version": "1.0.0",
  "description": "Streamline Tools helps streamline your Oracle CPQ Cloud BML development, administration, maintenance, and support tasks.",
  "permissions": [
    "downloads",
    "downloads.shelf",
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "host-permissions": ["https://*.bigmachines.com/*", "file://*"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        {
          "matches": ["https://*.bigmachines.com/*"],
          "css": ["content.css"]
        }
      ],
      "jsonpath-1.0.2.js": "jsonpath-1.0.2.js",
      "injected.js": "injected.js",
      "adminCommerceInjected.js": "adminCommerceInjected.js",
      "adminConfigInjected.js": "adminConfigInjected.js",
      "adminCommerceRulesInjected.js": "adminCommerceRulesInjected",
      "adminCommerceActionsInjected.js": "adminCommerceActionsInjected.js"
    }
  ],
  "matches": [""],
  "content-security-policy": {
    "extension_pages": [
      "index.html",
      "options.html",
      "popup.html",
      "adminCommerce.html",
      "adminConfig.html",
      "adminCommerceRules.html",
      "adminCommerceActions.html"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/streamline16.png",
      "32": "images/streamline32.png",
      "48": "images/streamline48.png",
      "128": "images/streamline128.png"
    }
  },
  "icons": {
    "16": "images/streamline16.png",
    "32": "images/streamline32.png",
    "48": "images/streamline48.png",
    "128": "images/streamline128.png"
  },
  "manifest_version": 3,
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Opens Streamline Tools Extension"
    },
    "unload_bml": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Triggers UNLOAD BML function for the current tab editor"
    },
    "load_bml": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Triggers LOAD BML function for the current tab editor"
    }
  }
}
