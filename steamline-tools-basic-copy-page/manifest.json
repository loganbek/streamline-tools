{
  "manifest_version": 2,
  "name": "Basic - Popup Page Starter Template",
  "description" : "Starter template for a basic popup page extension.",
  "version": "1.0.0",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": { 
      "32": "images/icon.png" 
    },
    "default_popup": "index.html",
    "default_title": "Open Popup"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "MacCtrl+Shift+O"
      },
      "description": "Toggle Popup"
    }
  }
}